{
  "name": "react-mailkit",
  "repository": "git@github.com:pavkout/react-mailkit.git",
  "author": "Pavlos Koutoglou <pkoutoglou@gmail.com>",
  "homepage": "https://www.react-mailkit.io",
  "version": "0.0.2",
  "description": "The core components from mjml lirbary",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "license": "MIT",
  "sideEffects": false,
  "private": true,
  "scripts": {
    "clean": "rimraf dist && rimraf types && rimraf tsconfig.tsbuildinfo",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check -- --watch",
    "types": "tsc",
    "build:ts": "NODE_ENV=production rollup -c",
    "build": "yarn clean && yarn types && yarn build:ts",
    "dev:ts": "yarn clean && rollup -cw",
    "dev": "yarn clean && yarn types && yarn dev:ts",
    "test": "jest --watch",
    "prepublish:public": "yarn build:ts && yarn bump-version",
    "publish:public": "npm publish --access public",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "pretest": "yarn build"
  },
  "peerDependencies": {
    "mjml": "^4.10.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "@react-mailkit/cli": "^0.0.1",
    "ace-builds": "^1.4.12",
    "color": "^3.1.3",
    "csstype": "^3.0.8",
    "html-to-text": "^7.1.1",
    "json2mjml": "^1.0.3",
    "mjml": "^4.10.2",
    "mjml-browser": "^4.10.2",
    "mjml-chart": "^5.6.121",
    "mjml2json": "^1.0.1",
    "polished": "^4.1.3",
    "react-ace": "^9.4.1",
    "react-live": "^2.3.0",
    "rimraf": "^3.0.2",
    "static-google-map": "^0.0.3",
    "styled-components": "^5.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/html-to-text": "^8.0.1",
    "@types/mjml": "^4.7.0",
    "@types/prismjs": "^1.16.6",
    "@types/react-test-renderer": "^17.0.1",
    "@types/styled-components": "^5.1.12",
    "jest": "^27.0.6",
    "jest-styled-components": "^7.0.5",
    "react-test-renderer": "^17.0.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  }
}
