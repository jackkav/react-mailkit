{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "pretty": true,
    "skipLibCheck": true,
    "composite": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@react-mailkit/*": ["packages/*/src"],
      "*": ["node_modules", "packages"]
    }
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelCore": "@babel/core"
  },
  "include": ["packages", "jest-dom/extend-expect"],
  "exclude": ["node_modules", "dist"]
}
